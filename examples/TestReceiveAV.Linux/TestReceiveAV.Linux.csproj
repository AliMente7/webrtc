<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="obj\**" />
    <EmbeddedResource Remove="obj\**" />
    <None Remove="obj\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="runtimes\linux-x64\native\libmrwebrtc.so" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="runtimes\linux-x64\native\libmrwebrtc.so">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
